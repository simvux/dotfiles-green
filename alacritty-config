# Configuration for Alacritty, the GPU enhanced terminal emulator


# Any items in the `env` entry below will be added as
# environment variables. Some entries may override variables
# set by alacritty it self.
env:
  # TERM env customization.
  #
  # If this property is not set, alacritty will set it to xterm-256color.
  #
  # Note that some xterm terminfo databases don't declare support for italics.
  # You can verify this by checking for the presence of `smso` and `sitm` in
  # `infocmp xterm-256color`.
  TERM: xterm-256color

# Window dimensions in character columns and lines
# Falls back to size specified by window manager if set to 0x0.
# (changes require restart)
window.dimensions:
  columns: 84
  lines: 24

# Adds this many blank pixels of padding around the window
# Units are physical pixels; this is not DPI aware.
# (change requires restart)
window.padding:
  x: 3
  y: 3

# Display tabs using this many cells (changes require restart)
tabspaces: 4

# When true, bold text is drawn using the bright variant of colors.
draw_bold_text_with_bright_colors: false

font:
  normal:
      #family: xos4 Terminus
    family: Misc Ohsnapu
    #family: scientifica
      #family: Misc Tamsyn
    style: Regular
  bold:
      #family: xos4 Terminus
    family: Misc Ohsnapu
    #family: Misc Tamsyn
    #family: scientifica
    style: Bold
  italic:
      #family: xos4 Terminus
    family : Misc Ohsnapu
    #family: Misc Tamsyn
    #family: scientifica
  size: 8.0

  offset:
    x: 0
    y: 0
  glyph_offse:
    x: 0
    y: 0


# View time per render
render_timer: false
custom_cursor_colors: false

colors:
  primary:
      #background: '0x262b35'
    background: '0x262b35'
    foreground: '0xfa507a'

  cursor:
    text: '0x000000' # #000000
    cursor: '0xffffff' # #ffffff

  normal:
    black:   '0x000000' # #000000
    red:     '0xdc00aa' # #dc00aa
    green:   '0x00ff00' # #00ff00
    yellow:  '0x50fad0' # #50fad0
    blue:    '0x50fad0' # #50fad0
    magenta: '0x50fa7b' # #50fa7b
    cyan:    '0x7afa50' # #7afa50
    white:   '0xfa507a' # #fa507a
  bright:
    black:   '0x7afa50' # #7afa50
    red:     '0xdd0000' # #dd0000
    green:   '0x00ff00' # #00ff00
    yellow:  '0x709afb' # #507afa
    blue:    '0x94bff3' # #94bff3
    magenta: '0xfa50cf' # #fa50cf
    cyan:    '0x93e9e3' # #93e9e3
    white:   '0xffffff' # #ffffff
  dim:
    black:   '0x333333' # #333333
    red:     '0x650000' # #650000
    green:   '0x006500' # #006500
    yellow:  '0x000065' # #000065
    blue:    '0x000065' # #000065
    magenta: '0x006565' # #006565
    cyan:    '0xb800b8' # #b800b8
    white:   '0xdddddd' # #dddddd

visual_bell:
  animation: EaseOutExpo
  duration: 0

# Background opacity
background_opacity: 1.0

mouse_bindings:
  - { mouse: Middle, action: Paste}
mouse:
  double_click: { threshold: 300 }
  triple_click: { threshold: 300 }
selection:
  semantic_escape_chars: ",â”‚`|:\"' ()[]{}<>"

hide_cursor_when_typing: false # xbanish already does this in a global scale
cursor_style: Block
live_config_reload: true

